#!/usr/bin/env ruby

require_relative "../lib/radar_dynamo"

require 'trollop'

opts = Trollop::options do
  opt :root, "Folder containing radars",  :default => "radars"  
end

def run_command opts
  radar_translator = Items.new (opts[:root])

  radar_translator.with_recs_json
end

puts run_command(opts).join("\n,")
